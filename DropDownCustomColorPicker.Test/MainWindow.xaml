<Window x:Class="DropDownCustomColorPicker.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DropDownCustomColorPicker.Test"
        xmlns:cp="clr-namespace:DropDownCustomColorPicker;assembly=DropDownCustomColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <StackPanel Orientation="Vertical">
        <cp:CustomColorPicker  Margin="0,20,0,0"  x:Name="customCP" SelectedColorChanged="customCP_SelectedColorChanged"></cp:CustomColorPicker>

        <Canvas Name="canPreview" Height="200" Margin="0,20,0,0"  Background="WhiteSmoke" Width="200"></Canvas>
    </StackPanel>
</Window>
